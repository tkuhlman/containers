#!/bin/sh

# For running gui docker containers, this is dangerous on anything but a machine I completely control
xhost local:

# The device shared will be machine specific, you can tell if all is good by running `glxinfo | grep render` then
# looking for errors and comparing to the host
exec docker run --name minecraft -h minecraft \
    --rm \
    -e DISPLAY=$DISPLAY \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v ~/.minecraft:/root/.minecraft \
    -v /dev/shm:/dev/shm \
    -v /etc/machine-id:/etc/machine-id \
    -v /run/user/1000/pulse:/run/user/1000/pulse \
    -v /var/lib/dbus:/var/lib/dbus \
    -v ~/.pulse:/root/.pulse \
    --device /dev/dri/card0:/dev/dri/card0 \
    minecraft

# To share a world use it is easier to switch networking
# --net=host \
