#!/bin/sh

# Some of the device info here may be machine specific
exec docker run --name minecraft -h minecraft \
    --rm \
    -e DISPLAY=$DISPLAY \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v /home/tim/.minecraft:/home/tim/.minecraft \
    -v /dev/shm:/dev/shm \
    -v /etc/machine-id:/etc/machine-id \
    -v /run/user/1000/pulse:/run/user/1000/pulse \
    -v /var/lib/dbus:/var/lib/dbus \
    -v /home/tim/.pulse:/home/tim/.pulse \
    --device /dev/dri/card0:/dev/dri/card0 \
    minecraft \
    /bin/sh -c 'PULSE_SERVER=/var/run/user/1000/pulse/native java -jar Minecraft.jar'

# To share a world use it is easier to switch networking
# --net=host \
