#!/bin/sh

# For running gui docker containers, this is dangerous on anything but a machine I completely control
xhost local:

exec docker run \
  --name moneydance -h moneydance \
  --rm \
  -e DISPLAY=$DISPLAY \
  -v /tmp/.X11-unix:/tmp/.X11-unix \
  -v /home/tim/data:/home/tim/data \
  -v /home/tim/.moneydance:/home/tim/.moneydance \
  moneydance
