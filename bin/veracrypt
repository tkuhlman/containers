#!/bin/sh

# For running gui docker containers, this is dangerous on anything but a machine I completely control
xhost local:

docker run \
  --name veracrypt \
  --rm \
  -e DISPLAY=$DISPLAY \
  -v /tmp/.X11-unix:/tmp/.X11-unix \
  -v ~/gdrive/Records:/Records \
  --device /dev/fuse:/dev/fuse \
  veracrypt
